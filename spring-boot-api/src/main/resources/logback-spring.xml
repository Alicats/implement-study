<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- 1. 定义日志格式 -->
    <!-- %d:时间 | %thread:线程名 | %X{requestId}: MDC中的ID | %level:级别 | %logger:类名 | %msg:消息 -->
    <property name="LOG_PATTERN" value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] [%X{requestId}] %-5level %logger{36} - %msg%n" />
    
    <!-- 彩色日志格式 (仅用于控制台) -->
    <property name="CONSOLE_LOG_PATTERN" value="%d{yyyy-MM-dd HH:mm:ss.SSS} %highlight(%-5level) [%blue(%thread)] [%yellow(%X{requestId})] %cyan(%logger{36}) - %msg%n" />

    <!-- 2. 输出到控制台 (ConsoleAppender) -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${CONSOLE_LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
        <!-- 只输出INFO及以上级别日志（INFO和ERROR） -->
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>INFO</level>
        </filter>
    </appender>

    <!-- 3. 根日志配置 -->
    <root level="INFO">
        <appender-ref ref="CONSOLE" />
    </root>

</configuration>
